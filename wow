--// Auto Jump + Auto Chat Script
--// Safe for use in your own Roblox Studio games

local Players = game:GetService("Players")
local ChatService = game:GetService("Chat")

local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")

--// SETTINGS
local AUTO_JUMP_ENABLED = true
local AUTO_CHAT_ENABLED = true
local JUMP_INTERVAL = 2         -- seconds between jumps
local CHAT_INTERVAL = 5         -- seconds between chat messages
local CHAT_MESSAGE = "Hello, Roblox!"  -- the message to send

--// AUTO JUMP FUNCTION
task.spawn(function()
	if AUTO_JUMP_ENABLED then
		while task.wait(JUMP_INTERVAL) do
			if humanoid and humanoid.Health > 0 then
				humanoid.Jump = true
			end
		end
	end
end)

--// AUTO CHAT FUNCTION
task.spawn(function()
	if AUTO_CHAT_ENABLED then
		while task.wait(CHAT_INTERVAL) do
			if player.Character then
				ChatService:Chat(player.Character, CHAT_MESSAGE, Enum.ChatColor.Blue)
			end
		end
	end
end)
