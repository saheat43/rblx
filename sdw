-- Loadstring version of the script with UI buttons to toggle Auto Jump and Auto Chat
local scriptToLoad = [[
    --// Auto Jump + Auto Chat Script with UI Buttons
    --// Safe for use in your own Roblox Studio games

    local Players = game:GetService("Players")
    local ChatService = game:GetService("Chat")
    local UserInputService = game:GetService("UserInputService")
    local GuiService = game:GetService("StarterGui")
    local tweenService = game:GetService("TweenService")
    
    -- Player and character setup
    local player = Players.LocalPlayer
    local character = player.Character or player.CharacterAdded:Wait()
    local humanoid = character:WaitForChild("Humanoid")
    
    -- SETTINGS
    local AUTO_JUMP_ENABLED = false
    local AUTO_CHAT_ENABLED = false
    local JUMP_INTERVAL = 2         -- seconds between jumps
    local CHAT_INTERVAL = 5         -- seconds between chat messages
    local CHAT_MESSAGE = "Hello, Roblox!"  -- the message to send

    -- Create UI elements (Button to toggle Auto Jump and Auto Chat)
    local screenGui = Instance.new("ScreenGui")
    screenGui.Parent = player:WaitForChild("PlayerGui")
    
    -- Auto Jump Button
    local jumpButton = Instance.new("TextButton")
    jumpButton.Size = UDim2.new(0, 200, 0, 50)
    jumpButton.Position = UDim2.new(0, 50, 0, 50)
    jumpButton.Text = "Toggle Auto Jump"
    jumpButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
    jumpButton.Parent = screenGui
    
    -- Auto Chat Button
    local chatButton = Instance.new("TextButton")
    chatButton.Size = UDim2.new(0, 200, 0, 50)
    chatButton.Position = UDim2.new(0, 50, 0, 150)
    chatButton.Text = "Toggle Auto Chat"
    chatButton.BackgroundColor3 = Color3.fromRGB(0, 0, 255)
    chatButton.Parent = screenGui
    
    -- Auto Jump Function
    local function autoJump()
        while true do
            if AUTO_JUMP_ENABLED then
                if humanoid and humanoid.Health > 0 then
                    -- Make sure the humanoid is not in a state that prevents jumping (like falling or swimming)
                    if humanoid:GetState() == Enum.HumanoidStateType.Physics or humanoid:GetState() == Enum.HumanoidStateType.Seated then
                        humanoid:ChangeState(Enum.HumanoidStateType.Physics)  -- Reset humanoid state to ensure we can jump
                        humanoid.Jump = true  -- Trigger jump
                    end
                end
            end
            wait(JUMP_INTERVAL)  -- Wait for the next jump interval
        end
    end

    -- Auto Chat Function
    local function autoChat()
        while true do
            if AUTO_CHAT_ENABLED then
                if player.Character then
                    ChatService:Chat(player.Character, CHAT_MESSAGE, Enum.ChatColor.Blue)
                end
            end
            wait(CHAT_INTERVAL)  -- Wait for the next chat interval
        end
    end

    -- Button Functionality: Toggle Auto Jump
    jumpButton.MouseButton1Click:Connect(function()
        -- Toggle Auto Jump
        AUTO_JUMP_ENABLED = not AUTO_JUMP_ENABLED
        if AUTO_JUMP_ENABLED then
            jumpButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)  -- Red for activated
            jumpButton.Text = "Deactivate Auto Jump"
            print("Auto Jump Activated")
        else
            jumpButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0)  -- Green for deactivated
            jumpButton.Text = "Activate Auto Jump"
            print("Auto Jump Deactivated")
        end
    end)
    
    -- Button Functionality: Toggle Auto Chat
    chatButton.MouseButton1Click:Connect(function()
        -- Toggle Auto Chat
        AUTO_CHAT_ENABLED = not AUTO_CHAT_ENABLED
        if AUTO_CHAT_ENABLED then
            chatButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)  -- Red for activated
            chatButton.Text = "Deactivate Auto Chat"
            print("Auto Chat Activated")
        else
            chatButton.BackgroundColor3 = Color3.fromRGB(0, 0, 255)  -- Blue for deactivated
            chatButton.Text = "Activate Auto Chat"
            print("Auto Chat Deactivated")
        end
    end)

    -- Start the Auto Jump and Auto Chat in separate threads
    task.spawn(autoJump)
    task.spawn(autoChat)
]]

-- Execute the loadstring
loadstring(scriptToLoad)()
